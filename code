<body>
    <div class="header">
        <div class="title-section">
            <h1>üéà Chasse aux Ballons üéà</h1>
        </div>
        <div class="controls">
            <select id="difficulty">
                <option value="simple">Simple</option>
                <option value="intermediaire">Interm√©diaire</option>
                <option value="complexe">Complexe</option>
            </select>
            <select id="operation">
                <option value="all">Tous m√©lang√©s</option>
                <option value="addition">Addition</option>
                <option value="soustraction">Soustraction</option>
                <option value="multiplication">Multiplication</option>
            </select>
            <button class="btn-restart" onclick="restartGame()">üîÑ Nouvelle Partie</button>
        </div>
        <div class="stats-section">
            <div class="score">Score: <span id="score">0</span></div>
            <div class="score">Temps: <span id="timer">3:00</span></div>
            <div class="lives" id="lives">
                <span class="heart">‚ù§Ô∏è</span>
                <span class="heart">‚ù§Ô∏è</span>
                <span class="heart">‚ù§Ô∏è</span>
            </div>
        </div>
    </div>

    <div class="game-area" id="gameArea">
        <div class="question" id="question">Pr√™t ? C'est parti ! üöÄ</div>
    </div>

    <script>
        let score = 0;
        let lives = 3;
        let currentAnswer = 0;
        let balloonInterval;
        let activeBalloons = [];
        let gameActive = true;
        let difficultyLevel = 1; // Niveau de difficult√© qui augmente progressivement
        let isPaused = false;
        let timeRemaining = 180; // 3 minutes en secondes
        let timerInterval;

        const colors = ['#FF6B9D', '#C44569', '#FFC312', '#12CBC4', '#FDA7DF', '#ED4C67', '#F79F1F', '#A3CB38'];

        function getRandomInt(min, max) {
            return Math.floor(Math.random() * (max - min + 1)) + min;
        }

        function updateTimer() {
            const minutes = Math.floor(timeRemaining / 60);
            const seconds = timeRemaining % 60;
            document.getElementById('timer').textContent = 
                `${minutes}:${seconds.toString().padStart(2, '0')}`;
            
            if (timeRemaining <= 0) {
                timeUp();
            }
        }

        function startTimer() {
            timerInterval = setInterval(() => {
                if (!isPaused && gameActive) {
                    timeRemaining--;
                    updateTimer();
                }
            }, 1000);
        }

        function timeUp() {
            gameActive = false;
            clearInterval(timerInterval);
            
            activeBalloons.forEach(b => b.element.remove());
            activeBalloons = [];

            const gameOverDiv = document.createElement('div');
            gameOverDiv.className = 'game-over';
            gameOverDiv.innerHTML = `
                <h2>TEMPS √âCOUL√â! ‚è∞</h2>
                <p>Ton score final: ${score} points</p>
                <p>En 3 minutes!</p>
                <button onclick="restartGame()">Rejouer</button>
            `;
            document.body.appendChild(gameOverDiv);
        }

        function generateQuestion() {
            const operation = document.getElementById('operation').value;
            const difficulty = document.getElementById('difficulty').value;
            let selectedOp;
            
            if (operation === 'all') {
                const ops = ['addition', 'soustraction', 'multiplication'];
                selectedOp = ops[getRandomInt(0, 2)];
            } else {
                selectedOp = operation;
            }

            let num1, num2, answer, symbol;

            switch(selectedOp) {
                case 'addition':
                    if (difficulty === 'simple') {
                        num1 = getRandomInt(1, 20);
                        num2 = getRandomInt(1, 20);
                    } else if (difficulty === 'intermediaire') {
                        num1 = getRandomInt(10, 50);
                        num2 = getRandomInt(10, 50);
                    } else { // complexe
                        num1 = getRandomInt(20, 99);
                        num2 = getRandomInt(20, 99);
                    }
                    answer = num1 + num2;
                    symbol = '+';
                    break;
                case 'soustraction':
                    if (difficulty === 'simple') {
                        num1 = getRandomInt(10, 20);
                        num2 = getRandomInt(1, num1);
                    } else if (difficulty === 'intermediaire') {
                        num1 = getRandomInt(20, 50);
                        num2 = getRandomInt(10, num1);
                    } else { // complexe
                        num1 = getRandomInt(50, 99);
                        num2 = getRandomInt(20, num1);
                    }
                    answer = num1 - num2;
                    symbol = '-';
                    break;
                case 'multiplication':
                    if (difficulty === 'simple') {
                        num1 = getRandomInt(2, 5);
                        num2 = getRandomInt(2, 10);
                    } else if (difficulty === 'intermediaire') {
                        num1 = getRandomInt(2, 10);
                        num2 = getRandomInt(2, 10);
                    } else { // complexe
                        num1 = getRandomInt(6, 12);
                        num2 = getRandomInt(6, 12);
                    }
                    answer = num1 * num2;
                    symbol = '√ó';
                    break;
            }

            document.getElementById('question').textContent = `${num1} ${symbol} ${num2} = ?`;
            currentAnswer = answer;
        }

        function createBalloon(isCorrect) {
            if (isPaused) return;
            
            const balloon = document.createElement('div');
            balloon.className = 'balloon';
            
            const color = colors[getRandomInt(0, colors.length - 1)];
            const value = isCorrect ? currentAnswer : currentAnswer + getRandomInt(-10, 10);
            
            balloon.innerHTML = `
                <div class="balloon-body" style="background: ${color};">
                    ${value}
                </div>
                <div class="balloon-string"></div>
            `;

            const leftPosition = getRandomInt(5, 90);
            balloon.style.left = leftPosition + '%';
            
            // Calcul de la dur√©e bas√©e sur le niveau de difficult√©
            // Plus le niveau augmente, plus les ballons montent vite
            const baseDuration = 15; // Dur√©e de base en secondes (plus lent au d√©part)
            const speedMultiplier = Math.max(0.5, 1 - (difficultyLevel - 1) * 0.06); // R√©duit progressivement la dur√©e
            const duration = baseDuration * speedMultiplier + getRandomInt(-1, 1);
            balloon.style.animationDuration = duration + 's';

            balloon.onclick = () => checkAnswer(value, balloon);

            document.getElementById('gameArea').appendChild(balloon);
            activeBalloons.push({element: balloon, isCorrect: isCorrect});

            setTimeout(() => {
                if (balloon.parentNode && isCorrect && !isPaused) {
                    showFeedback('BOUM! üí•');
                    loseLife();
                    // Nettoyer tous les ballons restants et passer au prochain exercice
                    activeBalloons.forEach(b => {
                        if (b.element.parentNode) {
                            b.element.remove();
                        }
                    });
                    activeBalloons = [];
                    if (gameActive && lives > 0) {
                        startRound();
                    }
                }
                if (balloon.parentNode) {
                    balloon.remove();
                    activeBalloons = activeBalloons.filter(b => b.element !== balloon);
                }
            }, duration * 1000);
        }

        function checkAnswer(value, balloon) {
            if (!gameActive || isPaused) return;

            if (value === currentAnswer) {
                showFeedback('BINGO! üéâ');
                score++;
                document.getElementById('score').textContent = score;
                
                // Augmenter la difficult√© tous les 3 points
                if (score % 3 === 0) {
                    difficultyLevel++;
                }
                
                balloon.style.animation = 'none';
                balloon.style.transform = 'scale(1.5)';
                setTimeout(() => balloon.remove(), 300);
                activeBalloons = activeBalloons.filter(b => b.element !== balloon);
                nextRound();
            } else {
                showFeedback('BOUM! üí•');
                balloon.remove();
                activeBalloons = activeBalloons.filter(b => b.element !== balloon);
                loseLife();
            }
        }

        function togglePause() {
            isPaused = !isPaused;
            
            if (isPaused) {
                // Cr√©er l'overlay de pause
                const pauseOverlay = document.createElement('div');
                pauseOverlay.className = 'pause-overlay';
                pauseOverlay.id = 'pauseOverlay';
                pauseOverlay.innerHTML = `
                    <h2>‚è∏Ô∏è PAUSE</h2>
                    <p>Appuie sur ESPACE pour continuer</p>
                `;
                document.body.appendChild(pauseOverlay);
                
                // Arr√™ter les animations des ballons
                activeBalloons.forEach(b => {
                    if (b.element.style) {
                        b.element.style.animationPlayState = 'paused';
                    }
                });
            } else {
                // Retirer l'overlay de pause
                const pauseOverlay = document.getElementById('pauseOverlay');
                if (pauseOverlay) {
                    pauseOverlay.remove();
                }
                
                // Reprendre les animations des ballons
                activeBalloons.forEach(b => {
                    if (b.element.style) {
                        b.element.style.animationPlayState = 'running';
                    }
                });
            }
        }

        function showFeedback(text) {
            const feedback = document.createElement('div');
            feedback.className = 'feedback';
            feedback.textContent = text;
            document.body.appendChild(feedback);
            setTimeout(() => feedback.remove(), 1000);
        }

        function loseLife() {
            if (!gameActive) return;
            
            lives--;
            const livesContainer = document.getElementById('lives');
            livesContainer.children[lives].textContent = 'üñ§';

            if (lives === 0) {
                gameOver();
            }
        }

        function gameOver() {
            gameActive = false;
            clearInterval(balloonInterval);
            
            activeBalloons.forEach(b => b.element.remove());
            activeBalloons = [];

            const gameOverDiv = document.createElement('div');
            gameOverDiv.className = 'game-over';
            gameOverDiv.innerHTML = `
                <h2>GAME OVER! üí•</h2>
                <p>Ton score final: ${score} points</p>
                <button onclick="restartGame()">Rejouer</button>
            `;
            document.body.appendChild(gameOverDiv);
        }

        function nextRound() {
            activeBalloons.forEach(b => b.element.remove());
            activeBalloons = [];
            startRound();
        }

        function startRound() {
            if (!gameActive) return;
            
            generateQuestion();
            
            const numBalloons = getRandomInt(4, 6);
            const correctPosition = getRandomInt(0, numBalloons - 1);
            
            for (let i = 0; i < numBalloons; i++) {
                setTimeout(() => {
                    if (gameActive) {
                        createBalloon(i === correctPosition);
                    }
                }, i * 1200); // Augment√© de 800ms √† 1200ms pour plus d'espace entre les ballons
            }
        }

        function restartGame() {
            document.querySelectorAll('.game-over').forEach(el => el.remove());
            document.querySelectorAll('.balloon').forEach(el => el.remove());
            document.querySelectorAll('.pause-overlay').forEach(el => el.remove());
            
            score = 0;
            lives = 3;
            gameActive = true;
            activeBalloons = [];
            difficultyLevel = 1; // R√©initialiser le niveau de difficult√©
            isPaused = false;
            timeRemaining = 180; // R√©initialiser le chrono √† 3 minutes
            
            document.getElementById('score').textContent = '0';
            updateTimer();
            
            const livesContainer = document.getElementById('lives');
            for (let i = 0; i < 3; i++) {
                livesContainer.children[i].textContent = '‚ù§Ô∏è';
            }
            
            clearInterval(timerInterval);
            startTimer();
            startRound();
        }

        // D√©marrer le jeu au chargement
        window.onload = () => {
            setTimeout(() => {
                startTimer();
                startRound();
            }, 1500);
        };

        // Gestion de la touche espace pour la pause
        document.addEventListener('keydown', (event) => {
            if (event.code === 'Space' && gameActive) {
                event.preventDefault();
                togglePause();
            }
        });
    </script>
</body>
</html>
